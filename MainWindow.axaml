<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LabelMatchingSvcPartAvalonia.MainWindow"
        Title="SVC-LBMC"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#231F20"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
        
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#00A0E4"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CaretBrush" Value="Black"/>
        </Style>

        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#00A0E4"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CaretBrush" Value="Black"/>
        </Style>

        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#00A0E4"/> <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/> 
        </Style>

        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#008BC7"/> <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.primary:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#005F87"/> <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="3.5*, 6.5*">

        <Border Grid.Column="0" Background="#F8F8F8" Padding="20">
            <StackPanel Spacing="20">
                
                <Border Background="#231F20" CornerRadius="4" Padding="15,10" Margin="0,0,0,5">
                    <Grid ColumnDefinitions="*, Auto">
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                            <Border Background="#00A0E4" CornerRadius="4" Width="40" Height="30">
                                <TextBlock x:Name="lblLineName" Text="F1" 
                                           Foreground="White" FontWeight="Bold" FontSize="14"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="SERVICE PART LABEL MATCHING" Foreground="White" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Button Grid.Column="1" Click="OnSettingsClick" 
                                Background="Transparent" Padding="5" Cursor="Hand"
                                ToolTip.Tip="Configuration">
                            <TextBlock Text="âš™" Foreground="White" FontSize="18"/>
                        </Button>
                        
                    </Grid>
                </Border>

                <Separator Height="3" Background="#44C8F5" Margin="0,0,0,10"/>

                <StackPanel Spacing="5">
                    <TextBlock Text="SCAN PC LABEL" FontWeight="Bold" Foreground="#231F20"/>
                    <TextBox x:Name="txtInput1" Watermark="Scan QR PC Label . . ." 
                             FontSize="16" Height="50" VerticalContentAlignment="Center"
                             KeyDown="OnInput1KeyDown"/>
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="2. SCAN COMPONENT (Barcode)" FontWeight="Bold" Foreground="#231F20"/>
                    <TextBox x:Name="txtInput2" Watermark="Waiting..." IsEnabled="False" 
                             FontSize="16" Height="50" VerticalContentAlignment="Center"
                             KeyDown="OnInput2KeyDown"/>
                </StackPanel>

                <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Margin="0,30,0,0">
                    <StackPanel>
                        <Border Background="#EAEAEA" CornerRadius="4,4,0,0" Padding="10">
                            <TextBlock Text="MATCHING DATA DETAILS" FontWeight="Bold" Foreground="#231F20"/>
                        </Border>
                        
                        <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto" Margin="15">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="SERVICE LABEL (QR)" FontWeight="Bold" Foreground="Gray" Margin="0,0,20,10"/>
                            <TextBlock x:Name="lblInfoLabel1" Grid.Row="0" Grid.Column="1" Text="-" FontWeight="Bold" Foreground="#231F20" FontSize="16" Margin="0,0,0,10"/>
                            
                            <Border Grid.Row="1" Grid.ColumnSpan="2" Height="1" Background="#EEE" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="COMPONENT PART" FontWeight="Bold" Foreground="Gray" Margin="0,0,20,0"/>
                            <TextBlock x:Name="lblInfoLabel2" Grid.Row="2" Grid.Column="1" Text="-" FontWeight="Bold" Foreground="#00A0E4" FontSize="18"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>

        <Border x:Name="pnlStatus" Grid.Column="1" Background="#A0A0A0">
            <Grid RowDefinitions="7*, 3*">
                
                <Grid Grid.Row="0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="5">
                        <Border Width="180" Height="180" CornerRadius="100" Background="White" Opacity="0.15" HorizontalAlignment="Center" Margin="0,0,0,-120"/>
                        
                        <TextBlock x:Name="lblStatusBig" Text="READY"
                                   FontSize="140" FontWeight="Black"
                                   Foreground="White" HorizontalAlignment="Center"
                                   TextAlignment="Center"/>

                        <Border Background="#231F20" Opacity="0.5" CornerRadius="8" Padding="30,15" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <TextBlock x:Name="lblStatusDetail" Text="SCAN LABEL FOR MATCHING"
                                       FontSize="28" Foreground="White" FontWeight="SemiBold"
                                       TextAlignment="Center" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                    
                    <TextBlock Text="DIID - MSI" Foreground="White" Opacity="0.5" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20"/>
                </Grid>

                <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="10" BoxShadow="0 4 10 0 #33000000">
                    <Grid RowDefinitions="Auto, *">
                        <Border Grid.Row="0" Background="#EAEAEA" CornerRadius="10,10,0,0" Padding="15,10">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="ðŸ•’" FontSize="16"/>
                                <TextBlock Text="RECENT HISTORY LOGS" FontWeight="Bold" Foreground="#231F20" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <ListBox x:Name="lstHistory" Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="10" FontSize="14"/>
                    </Grid>
                </Border>

            </Grid>
        </Border>

    </Grid>
</Window>